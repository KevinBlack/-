@import "../../common/css/list.wxss";
.header {
  height: 92rpx;
  background: #181818;
}
.city {
  float: left;
  width: 142rpx;
  line-height: 92rpx;
  font-size: 29rpx;
  color: #d3b9a0;
  overflow: hidden;
  height: 92rpx;
  margin-left: 30rpx;
}
.city text{
  display: inline-block;
  max-width: 110rpx;
  vertical-align: middle;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.city::after {
  content: "";
  display: inline-block;
  width: 0;
  position: relative;
  top:-2rpx;
  vertical-align: middle;
  height: 0;
  margin-left: 5rpx;
  border-width: 10rpx 10rpx 0;
  border-style: solid;
  border-color: #d3b9a0 transparent transparent;
}
.userinfo {
  float: right;
  width: 48rpx;
  height: 48rpx;
  margin: 23rpx 30rpx 0 0;
}
.userinfo image {
  width: 100%;
  height: 100%;
}
/* rpx  750rpx = 1屏幕宽度 */
.nav-list {
  display: flex;
  height: 200rpx;
  background: #fff;
}
.nav-list navigator {
  margin: auto;
  flex: 1;
  text-align: center;
}
.nav-list image {
  width: 87.5rpx;
  height: 87.5rpx;
}
.nav-list text {
  display: block;
  line-height: 51rpx;
  font-size: 26rpx;
}
.hot {
  margin-top: 20rpx;
  background: #fff;
}
.hot-title {
  font: 30rpx/80rpx "宋体";
  padding-left: 30rpx;
  color: #777;
}
